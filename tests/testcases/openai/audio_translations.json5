{
  "suite_name": "OpenAI Audio Translations",
  "provider": "openai",
  "endpoint": "/v1/audio/translations",
  "method": "POST",
  "base_params": {
    "model": "whisper-1"
  },
  "response_schema": "openai.AudioTranslationResponse",
  "tests": [
    {
      "name": "test_baseline",
      "description": "Baseline translation",
      "params": {},
      "files": {
        "file": "test_assets/audio/hello_en.mp3"
      }
    },
    {
      "name": "test_response_format_variants",
      "description": "Test response_format variants",
      "params": {
        "response_format": "$format"
      },
      "parameterize": {
        "format": ["json", "text", "srt", "verbose_json", "vtt"]
      },
      "files": {
        "file": "test_assets/audio/hello_en.mp3"
      },
      "unsupported_param": "response_format"
    },
    {
      "name": "test_prompt",
      "description": "Test prompt parameter",
      "params": {
        "prompt": "Please translate the audio politely into English."
      },
      "files": {
        "file": "test_assets/audio/hello_en.mp3"
      },
      "unsupported_param": "prompt"
    },
    {
      "name": "test_temperature",
      "description": "Test temperature parameter",
      "params": {
        "temperature": 0.5
      },
      "files": {
        "file": "test_assets/audio/hello_en.mp3"
      },
      "unsupported_param": "temperature"
    }
  ]
}
